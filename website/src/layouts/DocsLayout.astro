---
export interface Props {
  title: string;
  heading: string;
}

const { title, heading } = Astro.props;
---
<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <link rel="icon" type="image/svg+xml" href="/assets/logo.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=IBM+Plex+Sans:wght@400;500;600&family=Sora:wght@500;600;700&display=swap"
      rel="stylesheet"
    />
    <style>
      :root {
        --bg: #fff9f4;
        --paper: #fffefc;
        --ink: #2f2a44;
        --primary: #E88783;
        --secondary: #9BC4B6;
        --line: rgba(47, 42, 68, 0.16);
        --muted: rgba(47, 42, 68, 0.74);
        --accent: var(--primary);
        --accent-soft: rgba(232, 135, 131, 0.2);
        --mint-soft: rgba(155, 196, 182, 0.3);
        --panel-radius: 30px;
      }

      * {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
      }

      html,
      body {
        min-height: 100%;
      }

      html {
        font-family: "IBM Plex Sans", "Segoe UI", sans-serif;
      }

      body {
        color: var(--ink);
        background:
          radial-gradient(circle at 15% 10%, rgba(232, 135, 131, 0.26), transparent 34%),
          radial-gradient(circle at 88% 8%, rgba(155, 196, 182, 0.25), transparent 36%),
          radial-gradient(circle at 50% 92%, rgba(158, 201, 255, 0.17), transparent 42%),
          var(--bg);
      }

      .paint {
        position: fixed;
        inset: 0;
        pointer-events: none;
        z-index: 1;
      }

      .paint::before,
      .paint::after {
        content: "";
        position: absolute;
        border-radius: 50%;
        filter: blur(18px);
        animation: floatBlob 10s ease-in-out infinite;
      }

      .paint::before {
        width: 340px;
        height: 340px;
        top: -120px;
        left: -130px;
        background: rgba(232, 135, 131, 0.32);
      }

      .paint::after {
        width: 420px;
        height: 420px;
        bottom: -170px;
        right: -160px;
        background: rgba(155, 196, 182, 0.3);
        animation-delay: -4s;
      }

      .site {
        position: relative;
        z-index: 2;
      }

      .header {
        position: sticky;
        top: 0;
        z-index: 100;
        padding: 14px 18px;
      }

      .header-inner {
        max-width: 1080px;
        margin: 0 auto;
        padding: 11px 14px;
        border: 2px solid var(--line);
        border-radius: var(--panel-radius);
        background: rgba(255, 255, 255, 0.76);
        backdrop-filter: blur(8px);
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 16px;
      }

      .logo {
        display: inline-flex;
        align-items: center;
        gap: 10px;
        color: var(--ink);
        text-decoration: none;
        font-family: "Sora", sans-serif;
        font-size: 22px;
        font-weight: 600;
        line-height: 1;
      }

      .logo img {
        width: 30px;
        height: 30px;
      }

      .nav {
        display: flex;
        gap: 8px;
        flex-wrap: wrap;
        justify-content: flex-end;
      }

      .nav a {
        border: 1px solid var(--line);
        border-radius: 999px;
        background: rgba(255, 255, 255, 0.8);
        color: var(--ink);
        text-decoration: none;
        padding: 7px 14px;
        font-family: "Sora", sans-serif;
        font-size: 16px;
        font-weight: 600;
        line-height: 1;
      }

      .nav a:hover {
        transform: translateY(-1px) rotate(-1deg);
        background: var(--accent-soft);
      }

      .github-star {
        display: inline-flex;
        align-items: center;
        gap: 7px;
        border-color: rgba(214, 166, 62, 0.88);
        background: rgba(255, 224, 149, 0.24);
        color: #6f4d16;
        box-shadow: inset 0 0 0 1px rgba(255, 245, 210, 0.45);
      }

      .github-star .star-icon {
        width: 0.9em;
        height: 0.9em;
      }

      .github-star .star-icon path {
        fill: rgba(255, 214, 120, 0.22);
        stroke: currentColor;
        stroke-width: 2;
        stroke-linecap: round;
        stroke-linejoin: round;
      }

      .nav a.github-star:hover,
      .footer-links a.github-star:hover {
        transform: translateY(-1px);
        border-color: rgba(214, 166, 62, 1);
        background: rgba(255, 214, 120, 0.36);
        color: #5d3f0c;
        box-shadow: 0 2px 12px rgba(232, 185, 74, 0.34);
      }

      .nav a.github-star:hover .star-icon path,
      .footer-links a.github-star:hover .star-icon path {
        fill: rgba(255, 214, 120, 0.48);
      }

      main {
        width: min(1080px, 92vw);
        margin: 10px auto 68px;
      }

      .sheet {
        border: 2px solid var(--line);
        border-radius: var(--panel-radius);
        background: rgba(255, 255, 255, 0.8);
        box-shadow: 0 18px 45px rgba(47, 42, 68, 0.1);
        padding: clamp(18px, 4vw, 36px);
      }

      .breadcrumb {
        font-family: ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, "Liberation Mono", "Courier New", monospace;
        font-size: 14px;
        color: var(--muted);
        margin-bottom: 10px;
      }

      .breadcrumb a {
        color: var(--muted);
        text-decoration: none;
      }

      .breadcrumb a:hover {
        color: var(--accent);
      }

      .breadcrumb span {
        color: var(--accent);
      }

      .page-title {
        font-family: "Sora", sans-serif;
        font-size: clamp(30px, 5vw, 42px);
        line-height: 1.05;
        margin-bottom: 18px;
      }

      .content {
        line-height: 1.55;
        font-size: clamp(16px, 1.5vw, 19px);
        color: var(--muted);
      }

      .content h1,
      .content h2,
      .content h3,
      .content h4 {
        font-family: "Sora", sans-serif;
        color: var(--ink);
        margin-top: 28px;
        margin-bottom: 12px;
        line-height: 1.2;
      }

      .content h1 {
        font-size: clamp(28px, 4.2vw, 36px);
        border-bottom: 2px solid var(--line);
        padding-bottom: 8px;
      }

      .content h2 {
        font-size: clamp(24px, 3.6vw, 30px);
      }

      .content h3 {
        font-size: clamp(20px, 3vw, 24px);
      }

      .content p,
      .content ul,
      .content ol,
      .content table,
      .content blockquote,
      .content pre {
        margin: 14px 0;
      }

      .content ul,
      .content ol {
        padding-left: 24px;
      }

      .content li {
        margin: 7px 0;
      }

      .content a {
        color: var(--accent);
        text-decoration: none;
        border-bottom: 2px solid transparent;
      }

      .content a:hover {
        border-bottom-color: var(--accent);
      }

      .content code {
        font-family: ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, "Liberation Mono", "Courier New", monospace;
        font-size: 0.85em;
        padding: 2px 6px;
        border-radius: 8px;
        background: rgba(232, 135, 131, 0.12);
        color: #3f3557;
      }

      .content pre {
        padding: 18px 20px;
        border: 2px solid var(--line);
        border-radius: 16px;
        background: var(--paper);
        overflow-x: auto;
        font-family: ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, "Liberation Mono", "Courier New", monospace;
        font-size: 13px;
        line-height: 1.5;
        color: #2b2640;
      }

      .content pre code {
        padding: 0;
        background: none;
      }

      .content blockquote {
        border-left: 4px solid var(--secondary);
        background: var(--mint-soft);
        border-radius: 0 12px 12px 0;
        padding: 12px 14px;
        color: #2c2b3d;
      }

      .content table {
        width: 100%;
        border-collapse: collapse;
        font-size: 15px;
        border: 2px solid var(--line);
      }

      .content th,
      .content td {
        border: 1px solid var(--line);
        padding: 8px 10px;
      }

      .content th {
        font-family: "Sora", sans-serif;
        color: #2f2a44;
        background: rgba(155, 196, 182, 0.18);
      }

      .content hr {
        border: none;
        border-top: 2px solid var(--line);
        margin: 26px 0;
      }

      .content strong {
        color: #2f2a44;
      }

      .site-footer {
        width: min(1080px, 92vw);
        margin: 0 auto 30px;
        display: flex;
        flex-direction: column;
        gap: 8px;
      }

      .footer-inner {
        border: 2px solid var(--line);
        border-radius: var(--panel-radius);
        background: rgba(255, 255, 255, 0.76);
        backdrop-filter: blur(8px);
        padding: 12px 14px;
        display: flex;
        flex-direction: column;
        gap: 10px;
      }

      .footer-row {
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 12px;
      }

      .footer-brand {
        font-family: "Sora", sans-serif;
        font-size: 18px;
        font-weight: 600;
        color: rgba(47, 42, 68, 0.9);
      }

      .footer-links {
        display: flex;
        flex-wrap: wrap;
        justify-content: flex-end;
        gap: 8px;
      }

      .footer-links a {
        border: 1px solid var(--line);
        border-radius: 999px;
        background: rgba(255, 255, 255, 0.82);
        color: var(--ink);
        text-decoration: none;
        padding: 7px 12px;
        font-family: "Sora", sans-serif;
        font-size: 14px;
        font-weight: 600;
        line-height: 1;
      }

      @keyframes floatBlob {
        0%,
        100% { transform: translateY(0); }
        50% { transform: translateY(-10px); }
      }

      @media (max-width: 640px) {
        .header-inner {
          border-radius: var(--panel-radius);
          align-items: flex-start;
          flex-direction: column;
          padding: 10px;
        }

        .nav {
          width: 100%;
          flex-wrap: wrap;
        }

        .nav a {
          text-align: center;
          min-width: 90px;
        }

        .content pre {
          padding: 14px 16px;
        }

        .footer-inner {
          align-items: stretch;
        }

        .footer-row {
          align-items: flex-start;
          flex-direction: column;
        }

        .footer-links {
          justify-content: flex-start;
        }

      }
    </style>
  </head>
  <body>
    <div class="paint" aria-hidden="true"></div>
    <div class="site">
      <header class="header">
        <div class="header-inner">
          <a href="/" class="logo">
            <img src="/assets/logo.svg" alt="Tako logo" />
            tako
          </a>
          <nav class="nav">
            <a href="/docs">docs</a>
            <a href="https://github.com/lilienblum/tako" target="_blank" rel="noopener noreferrer" class="github-star">
              <svg class="star-icon" viewBox="0 0 24 24" aria-hidden="true" focusable="false">
                <path d="M12 2.8l2.7 5.47 6.03.88-4.36 4.25 1.03 6.01L12 16.64l-5.4 2.84 1.03-6.01L3.27 9.15l6.03-.88L12 2.8z" />
              </svg>
              <span>github</span>
            </a>
          </nav>
        </div>
      </header>

      <main>
        <section class="sheet">
          <div class="breadcrumb">
            <a href="/">home</a> / <a href="/docs">docs</a> / <span>{heading}</span>
          </div>
          <h1 class="page-title">{heading}</h1>
          <div class="content">
            <slot />
          </div>
        </section>
      </main>

      <footer class="site-footer">
        <div class="footer-inner">
          <div class="footer-row">
            <p class="footer-brand">tako</p>
            <div class="footer-links">
              <a href="/docs">docs</a>
              <a href="https://github.com/lilienblum/tako" target="_blank" rel="noopener noreferrer" class="github-star">
                <svg class="star-icon" viewBox="0 0 24 24" aria-hidden="true" focusable="false">
                  <path d="M12 2.8l2.7 5.47 6.03.88-4.36 4.25 1.03 6.01L12 16.64l-5.4 2.84 1.03-6.01L3.27 9.15l6.03-.88L12 2.8z" />
                </svg>
                <span>github</span>
              </a>
            </div>
          </div>
        </div>
      </footer>
    </div>
  </body>
</html>
