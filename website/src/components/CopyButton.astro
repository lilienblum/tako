---
import CheckIcon from "lucide-astro/Check";
import CopyIcon from "lucide-astro/Copy";

export interface Props {
  id?: string;
  class?: string;
  ariaLabel?: string;
  title?: string;
  label?: string;
}

const {
  id,
  class: className = "",
  ariaLabel = "Copy",
  title = "Copy",
  label = "",
} = Astro.props;
---
<button id={id} class:list={["copy-button", className]} type="button" aria-label={ariaLabel} title={title}>
  <CopyIcon class="copy-button-icon copy-button-icon-copy" aria-hidden="true" focusable="false" />
  <CheckIcon class="copy-button-icon copy-button-icon-check" aria-hidden="true" focusable="false" />
  {label && (
    <span class="copy-button-label" data-copy-label>
      {label}
    </span>
  )}
</button>

<style is:global>
  .copy-button {
    position: relative;
    display: inline-flex;
    align-items: center;
    justify-content: center;
  }

  .copy-button-icon {
    width: 16px;
    height: 16px;
    stroke: currentColor;
    stroke-width: 2;
    position: absolute;
    transition: opacity 0.12s ease, transform 0.12s ease;
  }

  .copy-button-icon-copy {
    opacity: 1;
    transform: scale(1);
  }

  .copy-button-icon-check {
    opacity: 0;
    transform: scale(0.85);
  }

  .copy-button.is-copied .copy-button-icon-copy {
    opacity: 0;
    transform: scale(0.85);
  }

  .copy-button.is-copied .copy-button-icon-check {
    opacity: 1;
    transform: scale(1);
  }

  .copy-button-label {
    position: absolute;
    width: 1px;
    height: 1px;
    margin: -1px;
    padding: 0;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    border: 0;
  }
</style>
