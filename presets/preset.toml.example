# Preset template example.
# Preset reference docs: https://tako.sh/docs/presets
# Use in `tako.toml` as: preset = "github:username/my-presets/custom-preset.toml"
# For official preset contributions, use `presets/<runtime>/<name>.toml`.

# Optional default runtime entrypoint.
# Used when app `tako.toml` omits top-level `main`.
# main = "dist/server/tako-entry.mjs"

# Optional static assets merged into runtime public directory during packaging.
# assets = ["dist/client"]

[build]
# Optional artifact excludes (gitignore-style, relative to workspace root).
# Added on top of runtime-base defaults (for example node_modules exclusion).
# exclude = ["dist/**/*.map"]

# Optional explicit container toggle.
# container = true
