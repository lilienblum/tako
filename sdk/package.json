{
  "name": "tako.sh",
  "version": "0.0.1-alpha.0",
  "description": "Official SDK for the Tako application platform",
  "keywords": [
    "bun",
    "deno",
    "deployment",
    "node",
    "serverless",
    "tako",
    "tako.sh"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lilienblum/tako.git",
    "directory": "sdk"
  },
  "files": [
    "dist",
    "src"
  ],
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./bun": {
      "types": "./dist/bun.d.ts",
      "import": "./dist/bun.mjs",
      "require": "./dist/bun.js"
    },
    "./node": {
      "types": "./dist/node.d.ts",
      "import": "./dist/node.mjs",
      "require": "./dist/node.js"
    },
    "./deno": {
      "types": "./dist/deno.d.ts",
      "import": "./dist/deno.mjs"
    },
    "./vite": {
      "types": "./src/vite.ts",
      "import": "./src/vite.ts",
      "require": "./dist/vite.js"
    }
  },
  "scripts": {
    "build": "bun run build:index && bun run build:adapters && bun run build:vite",
    "build:index": "bun build ./src/index.ts --outdir ./dist --target bun",
    "build:adapters": "bun build ./src/adapters/bun.ts ./src/adapters/node.ts ./src/adapters/deno.ts --outdir ./dist --target bun",
    "build:vite": "bun build ./src/vite.ts --outdir ./dist --target node",
    "typecheck": "tsc --noEmit",
    "test": "bun test"
  },
  "devDependencies": {
    "@types/bun": "catalog:dev",
    "@types/node": "catalog:dev",
    "typescript": "catalog:dev"
  }
}
